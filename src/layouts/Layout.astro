---
import "@/styles/globals.css";
import "@fontsource-variable/inter";
import "@fontsource-variable/gabarito";

import { ClientRouter } from "astro:transitions";

import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

const { title } = Astro.props || "Rajat's Blog";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" initial-scale='1.0"/' />
    <link rel="icon" type="image/svg+xml" href="favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{`${title ?? " Personal Blog"} - Rajat Kumar`}</title>
    <ClientRouter />
  </head>
  <body
    class="min-h-screen bg-zinc-900 flex flex-col mx-auto max-w-2xl px-4 sm:px-6 xl:max-w-4xl xl:px-0 text-slate-100"
  >
    <div class="flex flex-col flex-grow">
      <Header />
      <main class="flex-grow pt-32 md:pt-24">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
